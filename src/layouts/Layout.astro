---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";

import "@/styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="lancher - A minimal, local project-template manager written in Go. "
    />
    <title>lancher</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="shortcut icon" href="/favicon.ico" />

    <!-- Open Graph Meta Tags -->
    <meta property="og:url" content="https://lancher.dev" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="lancher - A minimal, local project-template manager written in Go."
    />
    <meta
      property="og:description"
      content="A minimal, local project-template manager written in Go."
    />
    <meta property="og:image" content="https://lancher.dev/og-image.png" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="lancher.dev" />
    <meta property="twitter:url" content="https://lancher.dev" />
    <meta
      name="twitter:title"
      content="lancher - A minimal, local project-template manager written in Go."
    />
    <meta
      name="twitter:description"
      content="A minimal, local project-template manager written in Go."
    />
    <meta name="twitter:image" content="https://lancher.dev/og-image.png" />

    <meta name="generator" content={Astro.generator} />
  </head>
  <body
    class="font-monospace flex min-h-screen flex-col font-mono text-[14px] leading-[1.6]"
  >
    <Header />
    <main
      role="main"
      aria-label="Main content"
      class="mx-0 my-16 flex-1 px-8 py-0 lg:px-16"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
