---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import MarkdownEnhancements from "@/components/docs/MarkdownEnhancements.astro";
import DocsSidebarLeft from "@/components/docs/DocsSidebarLeft.astro";
import TableOfContents from "@/components/docs/TableOfContents.astro";
import { extractHeadingsFromMarkdown } from "@/utils/docs";
import type { CollectionEntry } from "astro:content";
import { ClientRouter } from "astro:transitions";

import "@/styles/global.css";
import "@/styles/jaad/styles.css";
import "@/styles/jaad-overrides.css";

interface Props {
  title?: string;
  currentSlug?: string;
  entry?: CollectionEntry<"docsPages">;
}

const { title, currentSlug = "", entry } = Astro.props;

// Set dynamic page title
const pageTitle = `${title ? `${title} | ` : ""}lancher - Docs`;

// Extract headings from markdown content
const headings = entry ? extractHeadingsFromMarkdown(entry.body || "") : [];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="lancher - A minimal, local project-template manager written in Go. "
    />
    <title>{pageTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="shortcut icon" href="/favicon.ico" />

    <!-- Open Graph Meta Tags -->
    <meta property="og:url" content="https://lancher.dev" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="lancher - A minimal, local project-template manager written in Go."
    />
    <meta
      property="og:description"
      content="lancher - A minimal, local project-template manager written in Go."
    />
    <meta property="og:image" content="https://lancher.dev/og-image.png" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="lancher.dev" />
    <meta property="twitter:url" content="https://lancher.dev" />
    <meta
      name="twitter:title"
      content="lancher - A minimal, local project-template manager written in Go."
    />
    <meta
      name="twitter:description"
      content="lancher - A minimal, local project-template manager written in Go."
    />
    <meta name="twitter:image" content="https://lancher.dev/og-image.png" />

    <meta name="generator" content={Astro.generator} />

    <ClientRouter />
  </head>
  <body
    class="bg-background text-foreground flex min-h-screen flex-col text-[14px] leading-[1.6]"
  >
    <Header />

    <div class="docs-container relative">
      <DocsSidebarLeft currentSlug={currentSlug} />

      <div class="docs-main lg:mr-64 lg:ml-64">
        <slot />
      </div>

      <TableOfContents headings={headings} />
    </div>

    <MarkdownEnhancements />
    <Footer />
  </body>
</html>
